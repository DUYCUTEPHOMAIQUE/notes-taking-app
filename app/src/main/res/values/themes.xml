<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesTakingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#FFA4A4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBaseDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:popupMenuStyle">@style/PopupMenuBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="PopupMenuBackground" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <style name="Theme.NotesTakingApp" parent="Base.Theme.NotesTakingApp" />
    <style name="Theme.OpenScreen" parent="Base.Theme.NotesTakingApp">
        <item name="android:statusBarColor">@color/colorWhite</item>

    </style>

    <style name="DiaLogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DiaLogAnimationFromTop">
        <item name="android:windowEnterAnimation">@anim/slide_from_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_from_top_out</item>
    </style>

    <style name="TimePickerAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorPrimary">#FFA4A4</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.PChart.Material3TimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorSurface">@color/colorNoteVariant5</item>
        <item name="colorOnSurfaceVariant">@color/colorDarkGray</item>
        <item name="colorOnSurface">@color/colorError</item>
        <item name="colorPrimary">@color/colorDarkGray</item>
        <item name="colorOnPrimaryContainer">@color/colorWhite</item>
        <item name="colorPrimaryContainer">@color/colorBlack</item>
    </style>

</resources>