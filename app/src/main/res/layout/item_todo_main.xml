<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:contentPadding="@dimen/_8sdp"
    app:cardBackgroundColor="@color/colorNoteDefault"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/is_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/todo_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="todo content"
            android:maxLines="2"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@+id/is_completed"
            app:layout_constraintTop_toTopOf="@+id/is_completed" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_todo_date"
            android:text="24/05"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@+id/todo_content"
            app:layout_constraintStart_toStartOf="@+id/todo_content"
            />
        <TextView
            android:id="@+id/text_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expired"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/medium"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/colorBlack"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/text_todo_date"
            app:layout_constraintTop_toBottomOf="@+id/todo_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>