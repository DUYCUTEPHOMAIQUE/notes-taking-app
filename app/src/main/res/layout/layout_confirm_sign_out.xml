<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/confirm_sign_out"
    android:background="@drawable/background_tool_dialog"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_12sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign out"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_20sdp"
        android:textStyle="normal"
        android:fontFamily="@font/bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="Are you sure you want to sign out\n from the application?"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/sign_out_back_button"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:backgroundTint="#DDDDDD"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/reply"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="@string/back"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/medium"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_sign_out_button"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:backgroundTint="@color/colorNoteVariant5"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/sign_out_outline"
                app:tint="@color/colorError"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:textColor="@color/colorError"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>